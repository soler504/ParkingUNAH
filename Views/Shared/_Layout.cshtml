<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - ParkingUNAH</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/css/parking.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/ParkingUNAH.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="footer-navbar border-bottom">
            <div class="container texto-footer-navbar texto-navbar">
                <a style="color: white; text-decoration: none" asp-controller="Home" asp-action="Index">UNAH-CORTÉS PARKING MAP</a>
            </div>
        </nav>
    </header>

    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="footer-navbar border-top footer text-muted">
        <div class="container texto-footer-navbar texto-footer">
            &copy; 2025 Beta 1.0
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
