@using ParkingUNAH.Infrastructure.ParkingDb.Dtos

@{
    ViewData["Title"] = "Home";
}
@model List<EstadisticasSectorDto>

<div class="contenedor">
    <div class="contenedor-izquierdo-home">
        <div class="container-image">
            <img style="width:100%" src="~/images/map.png" alt="Alternate Text" />
        </div>
    </div>
    <div class="contenedor-derecho-home">
        @foreach (var sector in Model)
        {
            if ((sector.Id - 1) % 5 == 0 || sector.Id == 1)
            {     
                @:<div class="row">
            }

           <div class="col-sm-2">
                <div class="card custom-card text-center">
                    <p id="card-sector.Id" class="card-title mb-0">
                        @sector.Descripcion
                    </p>
                     <a style="color: white; text-decoration: none;" 
                     href="@Url.Action("EstacionamientoSector", "Parking", new { sectorId = sector.Id })">Ver</a>
                </div>
            </div>

            if (sector.Id % 5 == 0 || sector.Id == Model.Count)
            {
                @:</div>
            }
        }
    </div>
</div>
