@model ParkingUNAH.Models.LoginViewModel;

@{
    ViewData["Title"] = "Login";
}

<link rel="stylesheet" href="@Url.Content("~/css/login.css")" />

<div class="login-container">
    <h2>Iniciar Sesión</h2>
    <form asp-action="Login" method="post" novalidate>
        <div class="form-group">
            <label asp-for="Username">Usuario</label>
            <input asp-for="Username" />
            <span asp-validation-for="Username" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Password">Contraseña</label>
            <input asp-for="Password" type="password" />
            <span asp-validation-for="Password" class="text-danger"></span>
        </div>
        <button type="submit">Entrar</button>
        <div class="text-danger">
            @if (!ViewData.ModelState.IsValid)
            {
                <p>Usuario o contraseña incorrectos.</p>
            }
        </div>
    </form>
</div>
